<div class="container">
  <div class="card  col-md-4 mx-auto">
    <div class="card-header text-center">
      <h2>Add Note</h2>
     </div>
     <div class="card-body"> 
      <form action="/notes/add" method="POST">
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" rows="5" placeholder="description"></textarea>
        </div>
        <div class="form-group">
          <button class="btn-primary btn-block">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>