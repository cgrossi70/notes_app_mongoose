<div class="comtainer mt-5">
  <div class="card col-md-4 mx-auto">
    <div class="card-header text-center">
      <h2>Register</h2>
    </div>
    <div class="card-body">
      <form action="/users/register" method="POST">
        <div class="form-grpup mt-2">
          <input type="text" class="form-control input-sm" placeholder="Enter Name" name="name" value="{{name}}" autofocus> 
        </div>
        <div class="form-grpup mt-2">
          <input type="text" class="form-control  input-sm" placeholder="Enter Email Adress" value="{{email}}" name="email">
        </div>
        <div class="form-grpup mt-2">
          <input type="password" class="form-control input-sm" placeholder="Enter Password" value="{{password}}" name="password" > 
        </div>
        <div class="form-grpup mt-2">
          <input type="password" class="form-control  input-sm" placeholder="Confirm Password" value="{{confirm_password}}" name="confirm_password">
        </div>
        <div class="form-grpup mt-2">
          <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>
        
      </form> 
    </div>
  </div>
</div>